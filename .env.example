# ===========================================
# Organiza - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your production values
# DO NOT commit the .env file to version control!

# ===========================================
# Database Configuration (Production)
# ===========================================
PROD_CONNECTION_STRING=Host=your-database-host.com;Port=5432;Database=organiza_prod;Username=admin;Password=your-secure-password;SSL Mode=Require;

# ===========================================
# JWT Authentication
# ===========================================
# Generate a secure random key (minimum 32 characters)
# You can generate one at: https://generate-random.org/api-token-generator
JWT_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY-MIN-32-CHARS

# Your production domain
JWT_ISSUER=https://your-production-domain.com
JWT_AUDIENCE=https://your-production-domain.com

# ===========================================
# CORS Configuration
# ===========================================
FRONTEND_URL=https://your-production-domain.com

# ===========================================
# API Configuration
# ===========================================
API_URL=https://api.your-production-domain.com


# ===========================================
# AI Configuration
# ===========================================
GROQ_API_KEY=ghk_yourgroqapikey